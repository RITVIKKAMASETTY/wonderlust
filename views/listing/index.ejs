<% layout("/layot/boilerplate.ejs")%>
<style>
    .filter{
        margin-top: 1rem;
        text-align: center;
        margin-right: 2rem;
        opacity: 0.7;
    }
    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }
    #filter{
        display:flex;
        flex-wrap:wrap;
        align-items:center;
    }
    .taxinfo{
        display: hidden;
    }
    .taxtoggle{
        border:1px solid black;
        border-radius: 1rem;
       height:3.5rem;
       padding:1rem;
       margin-left:1rem;
       display:flex;
       align-items:center;
    }
</style>
<body>
    <div class="container">
        <div id="filter">
            <div class="filter">
                <i class="fa-solid fa-fire"></i>
                <p>Trending</p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-bed"></i>
                <p>Rooms</p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-mountain-city"></i>
                <p>Iconic cities</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-mountain-sun"></i>
            <p>Mountain</p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-building"></i>
                <p>Castle</p>    
                </div>
                <div class="filter">
                    <i class="fa-solid fa-person-swimming"></i>
                    <p>Amazing pool</p>
                </div>
                <div class="filter">
                    <i class="fa-solid fa-campground"></i>
                    <p>camping</p>
                </div>
                <div class="filter">
                    <i class="fa-solid fa-cow"></i>
                    <p>farms</p>
                </div>
                <div class="filter">
                    <i class="fa-solid fa-snowflake"></i>
                    <p>Artic</p>
                </div>
                <div class="filter">
                    <i class="fa-solid fa-ship"></i>
                    <p>boats</p>
                </div>
                <div class="taxtoggle">
                    <div class="form-check-reverse form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                        <label class="form-check-label" for="flexSwitchCheckDefault">Display Total After Taxes</label>
                      </div>
                </div>
                </div>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 mt-1 g-4">
            <% for(let listing of allListing) { %>
                <div class="col">
                    <a href="/listings/<%= listing._id %>" class="listinglink">
                        <div class="listing-card">
                            <div class="position-relative">
                                <img src="<%= listing.image.url %>" class="card-img-top img-fluid" style="height:18rem; @media (min-width: 768px) { height: 20rem; }" alt="<%= listing.title %>">
                                <div class="card-img-overlay"></div>
                            </div>
                            <div class="card-body">
                                <p class="card-text">
                                    <b><%= listing.title %></b><br>
                                    <%= listing.price.toLocaleString("en-IN") %>/night<i class="taxinfo">&nbsp;&nbsp;+18% GST</i>
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
            <% } %>
        </div>
    </div>
    <script>
        let taxToggle=document.getElementById("flexSwitchCheckDefault");
        taxToggle.addEventListener("click",function(){
            let taxInfo=document.getElementsByClassName("taxinfo");
            for(a of taxInfo)
        {
            if(a.style.display!="inline")
        {
            a.style.display="inline";
        }
        else
        {
            a.style.display="none";
        }
        }
        })
        </script>
</body>