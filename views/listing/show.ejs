<% layout("/layot/boilerplate.ejs")%>
<body>
    <div class="row">
        <div class="col-8 offset-2 mt-3">
    <div class="listing-card col-6 offset-2"><p><%=listing.title%></p><img src="<%=listing.image%>" class="card-img-top showimg" alt="...">
        <div class="card-body">
          <p class="card-text"><b><%=listing.description%></b><br><br><b>&#8377;<%=listing.price.toLocaleString("en-IN")%></b><br><br><b><%=listing.location%></b><br><br><b><%=listing.country%></b><br><br></div></div>
<div class="btns"><a href="/listings/<%=listing._id%>/edit" class="btn offset-4 mb-4">edit</a>
<form method="POST" action="/listings/<%=listing._id%>?_method=DELETE"><button class="btn width:4pxcol-4 offset-4 flex">delete</button></form></div></div></div>
<div class="col-8 offset-2 mt-3">
    <hr/>
    <h4>Leave A Review</h4>
    <form action="/listings/<%=listing._id%>/reviews" method="POST" novalidate class="needs-validation">
        <div class="mt-3">
            <label for="rating" class="form-label">Rating</label>
            <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
        </div>
        <div class="mt-3">
            <label for="comment">Comment</label>
            <textarea id="comment" name="review[comment]" class="form-control" required></textarea><div class="invalid-feedback">comment is required</div><div class="valid-feedback">comment looks good</div>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn">Submit</button>
        </div>
    </form>
    <hr/>
    <h4>Reviews</h4>
    <div class="row">
    <%listing.reviews.forEach((review) => { %>
    <div class="card col-5 ms-3 mb-3 mt-3">
        <div class="card-body">
            <p class="card-text"><b>Rating:</b> <%=review.rating%><br><b>Comment:</b> <%=review.comment%></p>
        </div>
        <form class="mb-3" method="POST" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
            <button class="btn btn-sm m-2">delete</button>
        </form>
    </div>
    <% }) %>
</div>
</div>
</body>